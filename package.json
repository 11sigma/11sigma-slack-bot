{
  "name": "11sigma-bot",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Michal Miszczyszyn <michal@mmiszy.pl>",
  "scripts": {
    "dev": "nodemon -e ts -x 'yarn ts-node-esm src/index.ts'",
    "prepare": "husky install",
    "ts-node-esm": "node --loader ts-node/esm --experimental-specifier-resolution=node"
  },
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "@typeofweb/schema": "0.7.3",
    "@typeofweb/server": "0.2.2",
    "@typeofweb/utils": "0.3.0",
    "dotenv": "10.0.0",
    "typescript": "4.4.3"
  },
  "devDependencies": {
    "@tsconfig/node14": "1.0.1",
    "@typeofweb/eslint-plugin": "0.2.2",
    "@types/dotenv": "8.2.0",
    "@types/node": "16.10.3",
    "eslint": "7.32.0",
    "husky": "7.0.2",
    "jest": "27.2.4",
    "lint-staged": "11.2.0",
    "nodemon": "2.0.13",
    "prettier": "2.4.1",
    "ts-node": "10.2.1",
    "ts-node-dev": "1.1.8"
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn eslint --fix",
      "yarn prettier --write"
    ],
    "**/*.{md,js,json}": [
      "yarn prettier --write"
    ]
  }
}
